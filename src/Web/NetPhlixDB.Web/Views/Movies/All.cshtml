@model PaginationMoviesViewModel

@{
    ViewData["Title"] = "All Movies";
}

<div class="container pt-4 pb-4">

    <ul>
        <p>Sort by:</p>
        <li><a asp-area="" asp-controller="Movies" asp-action="All" asp-route-sortOrder="@ViewData["NameSortParm"]">@ViewData["NameSortParm"]</a></li>
        <li><a asp-area="" asp-controller="Movies" asp-action="All" asp-route-sortOrder="@ViewData["DateSortParm"]">@ViewData["DateSortParm"]</a></li>
    </ul>

    <form asp-area="" asp-controller="Movies" asp-action="All" method="get">
        <div class="form-actions no-color">
            <p>
                Find by name: <input type="text" name="search" value="@ViewData["CurrentFilter"]" />
                And/Or by genre: <input type="text" name="genre" value="@ViewData["CurrentGenre"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-area="" asp-controller="Movies" asp-action="All">Back to Full List</a>
            </p>

        </div>
    </form>

    <h2 class="pb-3 ml-3 text-info">All Movies</h2>
    @for (int i = 0; i < Model.IndexMovieViewModels.Count(); i += 3)
    {
        <div class="row">
            @for (int k = 0; k <= 2 && k + i < Model.IndexMovieViewModels.Count; k++)
            {
                <div class="col-md-4">
                    <div class="card text-center" style="width: 18rem;">
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.IndexMovieViewModels[k + i].Id">
                        <img class="card-img-top" src="@Model.IndexMovieViewModels[k + i].Poster" alt="@Model.IndexMovieViewModels[k + i].Title">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">@Model.IndexMovieViewModels[k + i].Title</h5>
                            <p class="card-text">@Model.IndexMovieViewModels[k + i].ShortStoryline</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Rating</strong>: @Model.IndexMovieViewModels[k + i].Rating.ToString("F1") / 10</li>
                            <li class="list-group-item">Released: @Model.IndexMovieViewModels[k + i].DateReleased</li>
                        </ul>
                        <div class="card-body">
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.IndexMovieViewModels[k + i].Id" class="btn btn-primary mx-auto">More Info</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    <div class="row mt-3">
        @{
            var prev = this.ViewBag.CurrentPage - 1;
            var next = this.ViewBag.CurrentPage + 1;
            var lastPage = this.ViewBag.LastPage;
            var firstPage = this.ViewBag.FirstPage;

            if (next > lastPage)
            {
                next = lastPage;
            }
            if (prev < firstPage)
            {
                prev = firstPage;
            }
        }
        <div class="col text-center">
            <a asp-controller="Movies" asp-action="All" asp-route-currentPage="@this.ViewBag.FirstPage" class="btn btn-success">First</a>
        </div>
        <div class="col text-right">
            <a asp-controller="Movies" asp-action="All" asp-route-currentPage="@prev" class="btn btn-success">Previous</a>
        </div>
        <div class="col text-left">
            <a asp-controller="Movies" asp-action="All" asp-route-currentPage="@next" class="btn btn-success">Next</a>
        </div>
        <div class="col text-center">
            <a asp-controller="Movies" asp-action="All" asp-route-currentPage="@this.ViewBag.LastPage" class="btn btn-success">Last</a>
        </div>
    </div>
    <div class="text-xs-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
</div>
