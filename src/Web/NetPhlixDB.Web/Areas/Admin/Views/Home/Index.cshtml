
@{
    ViewData["Title"] = "Admin Home Page";
    Layout = "_Layout";
}

<div class="container w-75 jumbotron mt-4 text-center bg-light">
    <h1>Greetings, Administrator - @User.Identity.Name!</h1>
    <hr />
    <h3>Enjoy your work.</h3>
    <div class="row">
        <div class="col">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Movies" asp-action="Index">All Movies</a>
        </div>
        <div class="col">
            <a class="btn btn-success" asp-area="Admin" asp-controller="Movies" asp-action="Create">Create Movie</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Genres" asp-action="Index">All Genres</a>
        </div>
        <div class="col">
            <a class="btn btn-success" asp-area="Admin" asp-controller="Genres" asp-action="Create">Create Genre</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Companies" asp-action="Index">All Companies</a>
        </div>
        <div class="col">
            <a class="btn btn-success" asp-area="Admin" asp-controller="Companies" asp-action="Create">Create Company</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Movies" asp-action="Create">All Events</a>
        </div>
        <div class="col">
            <a class="btn btn-success" asp-area="Admin" asp-controller="Movies" asp-action="Create">Create Event</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Movies" asp-action="Create">All People</a>
        </div>
        <div class="col">
            <a class="btn btn-success" asp-area="Admin" asp-controller="Movies" asp-action="Create">Create Person</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <a class="btn btn-warning" asp-area="Admin" asp-controller="Users" asp-action="All">Promote / Demote Users</a>
        </div>
    </div>
</div>