@model NetPhlixDb.Data.ViewModels.Admin.Movies.MovieAddGenreViewModel

@{
    ViewData["Title"] = "AddGenre";
}

<div class="container w-75">
    <h1>Add Genre to Movie</h1>
    <hr />
    <form asp-action="AddGenre" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Title" class="col-form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenreType" class="col-form-label"></label>
                    <select asp-for="GenreType" asp-items="Html.GetEnumSelectList<GenreType>()" class="form-control"></select>
                    <span asp-validation-for="GenreType" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Add Genre" class="btn btn-primary" />
        </div>
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
